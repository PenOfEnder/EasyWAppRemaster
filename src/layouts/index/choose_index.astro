---
import { ClientRouter, fade, slide } from "astro:transitions";

import LogoCbtis from "../../components/logos/logo-cbtis.astro";
import LogoCaed from "../../components/logos/logo-caed.astro";

import Bienvenido from "../../components/logos/bienvenido.astro";
import Loader from "../../components/loaders/loading-2.astro";

import "../../style/base.css";

import IconDictionary from "../../components/icons/icon-dictionary.astro";
import IconTranslate from "../../components/icons/icon-translate.astro";
import IconBraille from "../../components/icons/icon-braille.astro";

import LocalVersion from "../../utils/localVersion";
---

<body
    class="flex min-h-screen items-center justify-center lg:justify-around flex-col bg-gradient-generic gap-y-10"
    id="body_choose"
>
    <header
        class="flex flex-wrap md:flex-nowrap items-center justify-around lg:justify-around w-5/6"
    >
        <div
            class="flex justify-center lg:jusitfy-around lg:w-full lg:h-full md:order-1 max-w-[150px]"
            aria-hidden="true"
        >
            <LogoCbtis size="100%" color="#0b3441" />
        </div>
        <div
            class="flex justify-center items-center order-last md:order-2"
            aria-hidden="true"
        >
            <Bienvenido size="100%" color="#0b3441" />
        </div>
        <div
            class="flex justify-between lg:w-full lg:h-full md:order-3 max-w-[150px]"
            aria-hidden="true"
        >
            <LogoCaed size="100%" color="#0b3441" />
        </div>
    </header>

    <main class="h-1/2 w-5/6 flex flex-wrap justify-around gap-y-5">
        <a
            class="flex flex-col justify-center items-center cursor-pointer
            hover:scale-110 transition-transform ease-in-out duration-600 hover:drop-shadow-xl"
            href="/diccionario"
            aria-label="Ir al diccionario general"
        >
            <section
                id="dictionary-btn"
                title="Diccionario"
                class="bg-[#EDFEFE] w-[122px] h-[122px] rounded-[12.5px] flex flex-col justify-center items-center
                mb-3 drop-shadow-xl
                cursor-pointer"
                aria-hidden="true"
            >
                <IconDictionary size="75%" />
            </section>

            <label
                class="c-placeholder-text text-xl text-[#0B3441] cursor-pointer"
                for="dictionary-btn"
                aria-hidden="true">Diccionario</label
            >
        </a>

        <a
            class="flex flex-col justify-center items-center cursor-pointer
            hover:scale-110 transition-transform ease-in-out duration-600 hover:drop-shadow-xl"
            href="/traductor"
            aria-label="Ir al traductor"
        >
            <section
                id="translate-btn"
                title="Traductor"
                class="bg-[#EDFEFE] w-[122px] h-[122px] rounded-[12.5px] flex justify-center items-center
                mb-3 drop-shadow-xl
                cursor-pointer"
                aria-hidden="true"
            >
                <IconTranslate size="75%" />
            </section>
            <label
                class="c-placeholder-text text-xl text-[#0B3441] cursor-pointer"
                for="translate-btn"
                aria-hidden="true">Traductor</label
            >
        </a>

        <a
            class="col-span-2 lg:col-span-1 flex flex-col justify-center items-center cursor-pointer
            hover:scale-110 transition-transform ease-in-out duration-600 hover:drop-shadow-xl"
            href="/braille"
            aria-label="Ir a la sección de braille"
        >
            <section
                id="braille-btn"
                title="Braile"
                class="bg-[#EDFEFE] w-[122px] h-[122px] rounded-[12.5px] flex justify-center items-center
                mb-3 drop-shadow-xl
                cursor-pointer"
                aria-hidden="true"
            >
                <IconBraille size="75%" />
            </section>
            <label
                class="c-placeholder-text text-xl text-[#0B3441] cursor-pointer"
                for="braille-btn"
                aria-hidden="true">Braille</label
            >
        </a>
    </main>

    <footer
        class="h-fit w-5/6 flex items-center align-center"
        aria-hidden="true"
    >
        <span
            class="text-center text-lg text-[#FFFFFF] font-[600] c-placeholder-text w-full"
        >
            Versión {LocalVersion}
            <br /> Designed by DevSpark
        </span>
    </footer>
</body>
