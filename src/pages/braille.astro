---
import "../style/base.css";
import ClientRouter from "astro/components/ClientRouter.astro";

import LogoCaed from "../components/logos/logo-caed.astro";
import LogoCbtis from "../components/logos/logo-cbtis.astro";

import IconLeftArrow from "../components/icons/icon-left-arrow.astro";

import IconAbc from "../components/icons/icon-abc.astro";
import IconBrailleDots from "../components/icons/icon-braille-dots.astro";

import LocalVersion from "../utils/localVersion";
import IconTranslate from "../components/icons/icon-translate.astro";
import IconBraille from "../components/icons/icon-braille.astro";
import IconPrinter from "../components/icons/icon_printer.astro";


---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sección de braille</title>
        <ClientRouter />
    </head>
    <body
        class="bg-gradient-generic grid grid-rows-3 place-items-center  h-screen w-full"
    >
        <header
            class="row-span-1 flex flex-wrap md:flex-nowrap items-center justify-around lg:justify-around w-5/6"
        >
            <div
                class="flex justify-center lg:jusitfy-around lg:w-full lg:h-full md:order-1 max-w-[150px]"
            >
                <LogoCbtis size="100%" color="#0b3441" />
            </div>
            <div class="flex justify-center items-center order-last md:order-2">
                <h2 class="text-xl md:text-4xl font-bold text-[#0b3441] flex items-center">Sección de braille</h2>
            </div>
            <div
                class="flex justify-between lg:w-full lg:h-full md:order-3 max-w-[150px]"
            >
                <LogoCaed size="100%" color="#0b3441" />
            </div>
        </header>
        <main class="row-span-2 w-5/6 flex flex-wrap lg:flex-nowrap justify-around lg:justify-evenly items-center  ">
            <section
                class="flex flex-col justify-center items-center cursor-pointer
                hover:scale-110 transition-transform ease-in-out duration-600 hover:drop-shadow-xl"
            >
                <a
                    id="dictionary-btn"
                    title="Traductor"
                    class="bg-[#EDFEFE] w-[122px] h-[122px] rounded-[12.5px] flex flex-col justify-center items-center
                    mb-3 drop-shadow-xl
                    cursor-pointer"
                    href="/"
                >
                    <span class="ml-[25%]">
                        <IconLeftArrow size={"100%"} color="#083441" />
                    </span>
                </a>

                <label
                    class="c-placeholder-text text-xl text-[#0B3441] cursor-pointer"
                    for="dictionary-btn">Diccionario</label
                >
            </section>

            <section
                class="flex flex-col justify-center items-center cursor-pointer
            hover:scale-110 transition-transform ease-in-out duration-600 hover:drop-shadow-xl"
            >
                <a
                    id="dictionary-btn"
                    title="Abecedario"
                    class="bg-[#EDFEFE] w-[122px] h-[122px] rounded-[12.5px] flex flex-col justify-center items-center
                mb-3 p-2 drop-shadow-xl
                cursor-pointer"
                    href="/braille/abecedario"
                >
                    <IconAbc size="95%" />
                </a>
                <label
                    class="c-placeholder-text text-xl text-[#0B3441] cursor-pointer"
                    for="dictionary-btn">Abecedario en braille</label
                >
            </section>

            

            <section
                class="col-span-2 lg:col-span-1 flex flex-col justify-center items-center cursor-pointer
                hover:scale-110 transition-transform ease-in-out duration-600 hover:drop-shadow-xl"
            >
                <a
                    id="braille-btn"
                    title="Braile"
                    class="bg-[#EDFEFE] w-[122px] h-[122px] rounded-[12.5px] flex justify-center items-center
                    mb-3 p-2 drop-shadow-xl
                    cursor-pointer"
                    href="/braille/traductor"
                >
                    <IconBrailleDots size="75%" />
                </a>
                <label
                    class="c-placeholder-text text-xl text-[#0B3441] cursor-pointer"
                    for="braille-btn">Asistente de braille</label
                > 
            </section>

            <section
                class="flex flex-col justify-center items-center cursor-pointer
            hover:scale-110 transition-transform ease-in-out duration-600 hover:drop-shadow-xl"
            >
                <a
                    id="dictionary-btn"
                    title="Imprimir"
                    class="bg-[#EDFEFE] w-[122px] h-[122px] rounded-[12.5px] flex flex-col justify-center items-center
                mb-3 p-2 drop-shadow-xl
                cursor-pointer"
                    href="/braille/printer"
                >
                    <IconPrinter size="95%" />
                </a>
                <label
                    class="c-placeholder-text text-xl text-[#0B3441] cursor-pointer"
                    for="dictionary-btn">Imprimir a braille</label
                >
            </section>
        </main>
        
        <footer class=" text-center flex items-center w-5/6 justify-center">
            <span
                class="text-center text-lg text-[#FFFFFF] font-[600] c-placeholder-text"
            >
                Versión {LocalVersion}
                <br /> Designed by DevSpark
            </span>
        </footer>
    </body>
</html>
