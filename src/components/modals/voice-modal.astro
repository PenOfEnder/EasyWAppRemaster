---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<main class="hidden absolute top-0 left-0 translate-x-[100%] translate-y-[150%] w-1/3 h-1/4 flex flex-col items-center justify-center text-center bg-[#d2fafb] rounded-xl" id="voice-modal">
    <h1 class="w-full flex justify-center items-center h-1/4 border-b-3 border-b-[#2dd3e3]">
        {title}
    </h1>
    <section class="grid grid-cols-1 grid-rows-3 w-full h-3/4 place-items-center">
        <p class="w-full flex justify-around items-center text-center row-span-2">
            <button class="bg-[#1296ad] cursor-pointer hover:brightness-90 text-[#0b3441] p-2 flex items-center rounded-md
            transition-all duration-150 ease-in-out
            "
            id="iniciarGrabacion"
            >ðŸŽ¤ Iniciar a grabar</button>
            <button class="bg-[#1a4f5f] cursor-pointer hover:brightness-90 text-[#12b6c8] p-2 flex items-center rounded-md
            transition-all duration-150 ease-in-out
            "
            id="terminarDictado"
            >ðŸš« Terminar dictado</button>
        </p>
        <button class="bg-[#1a5f70] text-[#aaf3f7] p-2 rounded-md cursor-pointer" id="finalizar">
            Finalizar
        </button>        
    </section>
</main>

<script>
    const continueButton = document.getElementById("finalizar") as HTMLElement;
    const modal = document.getElementById("voice-modal") as HTMLElement;
    continueButton.addEventListener("click", () => {
        modal.classList.toggle("hidden");
    });
</script>
