---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<article class="hidden w-full h-full absolute top-0 left-0 flex items-center justify-center backdrop-blur-[1.5px]" id="warning-modal">
    <main class="w-1/3 h-1/4 flex flex-col items-center justify-center text-center bg-[#d2fafb] rounded-xl">
        <h1 class="w-full flex justify-center items-center h-1/4 border-b-3 border-b-[#2dd3e3]">
            {title}
        </h1>
        <section class="grid grid-cols-1 grid-rows-3  h-3/4 place-items-center">
            <p class="flex items-center text-center row-span-2">
                <slot />
            </p>
            <button class="bg-[#1a5f70] text-[#aaf3f7] p-2 rounded-md" id="continue">
                Continuar
            </button>        
        </section>
    </main>
</article>

<script>
    const continueButton = document.getElementById("continue") as HTMLElement;
    const modal = document.getElementById("warning-modal") as HTMLElement;
    continueButton.addEventListener("click", () => {
        modal.classList.toggle("hidden");
    });
</script>
