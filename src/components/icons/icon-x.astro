---
interface Props {
    size: string;
    color: string;
}

const { size, color } = Astro.props;
---

<svg
    xmlns="http://www.w3.org/2000/svg"
    width={size}
    height={size}
    viewBox="0 0 24 24"
    ><path
        fill={color}
        stroke={color}
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M18 6L6 18M6 6l12 12"></path></svg
>
