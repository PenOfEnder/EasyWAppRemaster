---
interface Props {
    size?: string;
    color1?: string;
    color2?: string;
    strokeWidth?: string;
}

const { 
    size = "128", 
    color1 = "#1296AD", 
    color2 = "#0B3441", 
    strokeWidth = "1.5" 
} = Astro.props;

